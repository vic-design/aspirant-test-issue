{% extends 'main.html.twig' %}

{% block title %}{{ trailers | length }} iTunes Movie trailers{% endblock %}

{% block content %}
    <div class="container">
        <br/>
        <div>Curent date/time: {{ datetime }}</div>
        <div>Controller class name: {{ controller }}</div>
        <div>Current method name: {{ method }}</div>
        <h1 class="mt-5 mb-4">{{ trailers | length }} iTunes Movie trailers</h1>        
        <table class="table table-bordered">
            {% for trailer in trailers %}
                <tr>
                    <td>
                        <img src="{{ trailer.image }}"
                             style="float: left; width: 100px; height: 100px; margin: 0 5px 0 0;">
                        <h4>{{ trailer.title }}</h4>                    
                        <a href="{{ trailer.link }}" target="_blank">{{ trailer.link }}</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
